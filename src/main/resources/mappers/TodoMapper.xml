<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.samdul.hellojava.mapper.TodoMapper"> <!-- 패키지 경로 수정 -->
    <select id="findAll" resultType="shop.samdul.hellojava.entity.TodoEntity"> <!-- 패키지 경로 수정 -->
        SELECT
            id, subject, body, completed
        FROM ENCORE_TODO_TBL
        ORDER BY id DESC
    </select>

    <select id="findById" resultType="shop.samdul.hellojava.entity.TodoEntity"> <!-- 패키지 경로 수정 -->
        SELECT
            id, subject, body, completed
        FROM ENCORE_TODO_TBL
        WHERE id = #{id}
    </select>
</mapper>
